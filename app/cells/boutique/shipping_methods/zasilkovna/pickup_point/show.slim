.b-shipping-methods-zasilkovna-pickup-point
  = model.hidden_field :pickup_point_remote_id,
                        class: 'b-shipping-methods-zasilkovna-pickup-point__input-remote-id'
  = model.hidden_field :pickup_point_title,
                        class: 'b-shipping-methods-zasilkovna-pickup-point__input-title'

  span.btn.btn-secondary.b-shipping-methods-zasilkovna-pickup-point__btn[
    data-api-key=ENV["ZASILKOVNA_API_KEY"]
    class=("is-invalid" if error?)
  ]
    = t('.select_point')

  .b-shipping-methods-zasilkovna-pickup-point__selected.small
    = model.object.pickup_point_title

  - if error?
    .b-shipping-methods-zasilkovna-pickup-point__error.invalid-feedback.small
      = model.object.errors.full_messages_for(:pickup_point_remote_id).join(', ')
