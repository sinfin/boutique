- if f.object.billing_enabled?
  = f.input :checkout_terms_agreement, as: :redactor
  = f.input :recurring_payment_disclaimer, as: :redactor

  h3 = t(".billing_details")

  .card
    .card-body
      .row
        .col-md-6
          = f.input :billing_name

      = f.input :billing_address_line_1
      = f.input :billing_address_line_2

      .row
        .col-md-6 = f.input :billing_identification_number
        .col-md-6 = f.input :billing_vat_identification_number

      = f.input :billing_note
      = f.input :billing_account_number
